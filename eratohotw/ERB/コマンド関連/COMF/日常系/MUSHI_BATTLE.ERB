	攻撃スキル = マヒ攻撃
ELSEIF STRCOUNT(MUSHI_SKL:NUM, "眠り粉") && スキル判定(20, ARG, NUM) && !STRCOUNT(MUSHI_STATUS:攻撃対象, "<眠り>")
	CALL MUSHI_MSGSET(@"【%CALLNAME:(MUSHI_BATTLER:ARG)%】《%MUSHI_NAME_TR(MUSHI_NAME:NUM)%》uses %MUSHI_SKL_TR("[眠り粉]")%!")
	MUSHI_MSGCL:RESULT = C_L_GREEN
