	CALL MUSHI_MSGSET(@"【%CALLNAME:(MUSHI_BATTLER:ARG)%】《%MUSHI_NAME_TR(MUSHI_NAME:NUM)%》uses %MUSHI_SKL_TR("[毒攻撃]")%！")
	MUSHI_MSGCL:RESULT = C_L_GREEN
	TIMES ダメージ補正, 0.80
	攻撃スキル = 毒攻撃
ELSEIF STRCOUNT(MUSHI_SKL:NUM, "猛毒攻撃") && スキル判定(20, ARG, NUM) && !STRCOUNT(MUSHI_STATUS:攻撃対象, "<猛毒>")
	CALL MUSHI_MSGSET(@"【%CALLNAME:(MUSHI_BATTLER:ARG)%】《%MUSHI_NAME_TR(MUSHI_NAME:NUM)%》uses %MUSHI_SKL_TR("[猛毒攻撃]")%!")
	MUSHI_MSGCL:RESULT = C_L_GREEN
