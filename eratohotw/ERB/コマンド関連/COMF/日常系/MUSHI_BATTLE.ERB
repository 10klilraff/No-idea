	CALL MUSHI_MSGSET(@"【%CALLNAME:(MUSHI_BATTLER:ARG)%】《%MUSHI_NAME_TR(MUSHI_NAME:NUM)%》uses %MUSHI_SKL_TR("[悪臭攻撃]")%!")
