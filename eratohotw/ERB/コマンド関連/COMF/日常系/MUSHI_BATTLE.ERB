	TIMES ダメージ補正, 1.00
	攻撃スキル = 吸収攻撃
ENDIF
;複合攻撃スキル
IF STRCOUNT(MUSHI_SKL:NUM, "強攻撃") && スキル判定(40, ARG, NUM)
	CALL MUSHI_MSGSET(@"【%CALLNAME:(MUSHI_BATTLER:ARG)%】《%MUSHI_NAME_TR(MUSHI_NAME:NUM)%》uses %MUSHI_SKL_TR("[強攻撃]")%!")
	MUSHI_MSGCL:RESULT = C_YELLOW
	IF STRCOUNT(MUSHI_SKL:対象NUM, "光の装甲")
		CALL MUSHI_MSGSET(@"【%CALLNAME:(MUSHI_BATTLER:攻撃対象)%】But《%MUSHI_NAME_TR(MUSHI_NAME:対象NUM)%》's %MUSHI_SKL_TR("[光の装甲]")% prevents all normal damage!")
		MUSHI_MSGCL:RESULT = C_AQUA
	ELSE
		CALL MUSHI_MSGSET(@"Damage increased by 1.3x!")
		TIMES ダメージ補正, 1.30
		攻撃スキル:1 += "強攻撃"
	ENDIF
ENDIF
IF STRCOUNT(MUSHI_SKL:NUM, "クリティカル攻撃") && スキル判定(20, ARG, NUM)
	CALL MUSHI_MSGSET(@"【%CALLNAME:(MUSHI_BATTLER:ARG)%】《%MUSHI_NAME_TR(MUSHI_NAME:NUM)%》uses %MUSHI_SKL_TR("[クリティカル攻撃]")%!")
