	CALL MUSHI_MSGSET(@"【%CALLNAME:(MUSHI_BATTLER:ARG)%】《%MUSHI_NAME_TR(MUSHI_NAME:NUM)%》's skill %MUSHI_SKL_TR("[軟体特効]")% activates!")
	MUSHI_MSGCL:RESULT = C_YELLOW
