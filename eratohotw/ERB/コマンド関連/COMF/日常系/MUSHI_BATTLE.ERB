	CALL MUSHI_MSGSET(@"【%CALLNAME:(MUSHI_BATTLER:ARG)%】《%MUSHI_NAME_TR(MUSHI_NAME:NUM)%》uses %MUSHI_SKL_TR("[マヒ攻撃]")%!")
	MUSHI_MSGCL:RESULT = C_L_GREEN
